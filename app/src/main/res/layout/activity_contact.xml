<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_height="wrap_content"
android:layout_width="match_parent"
android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_contact_photo"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:padding="16dp"
        android:contentDescription="@string/contact_photo_descr"
        android:visibility="invisible"/>

    <ProgressBar
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:id="@+id/pb_photo_loading_indicator"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"/>

    <TextView
        android:id="@+id/tv_contact_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_below="@+id/iv_contact_photo"
        android:paddingBottom="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tv_lbl_contact_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_contact_title"
        android:layout_alignBaseline="@+id/tv_contact_title"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginRight="16dp"/>

    <TextView
        android:id="@+id/tv_contact_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_contact_name"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_toEndOf="@+id/tv_lbl_contact_title"
        android:layout_toRightOf="@+id/tv_lbl_contact_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <View
        android:id="@+id/divider1"
        style="@style/divider"
        android:layout_below="@id/tv_contact_title" />

    <TextView
        android:id="@+id/tv_lbl_contact_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_contact_email"
        android:layout_below="@+id/divider1"
        android:layout_alignLeft="@id/tv_lbl_contact_title"
        android:layout_alignStart="@id/tv_lbl_contact_title"/>

    <TextView
        android:id="@+id/tv_contact_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/tv_lbl_contact_email"
        android:layout_toRightOf="@+id/tv_lbl_contact_email"
        android:layout_alignBaseline="@+id/tv_lbl_contact_email"
        android:layout_alignLeft="@+id/tv_contact_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        />

    <View
        android:id="@+id/divider2"
        style="@style/divider"
        android:layout_below="@id/tv_lbl_contact_email" />

    <TextView
        android:id="@+id/tv_lbl_contact_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_contact_phone"
        android:layout_below="@+id/divider2"
        android:layout_alignLeft="@id/tv_lbl_contact_title"
        android:layout_alignStart="@id/tv_lbl_contact_title"/>

    <TextView
        android:id="@+id/tv_contact_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/tv_lbl_contact_phone"
        android:layout_toRightOf="@+id/tv_lbl_contact_phone"
        android:layout_alignBaseline="@+id/tv_lbl_contact_phone"
        android:layout_alignLeft="@+id/tv_contact_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"

        />

</RelativeLayout>